@using Microsoft.AspNetCore.Identity

@if (User.Identity.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="navbar-right d-inline">
            <li>
                @Html.ActionLink(User.Identity.Name, "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Logout</a></li>
        </ul>
    }
}
else
{
    <ul class="navbar-right d-inline">
        <li class="mx-2">@Html.ActionLink("Register", "Register", "Account")</li>
        <li class="mx-2">@Html.ActionLink("Log in", "Login", "Account")</li>
    </ul>
}
