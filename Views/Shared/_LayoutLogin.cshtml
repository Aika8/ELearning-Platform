<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="img/favicon.ico" rel="shortcut icon" />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Raleway:400,400i,500,500i,600,600i,700,700i,800,800i" rel="stylesheet">

    <!-- Stylesheets -->
    <link rel="stylesheet" href="~/css/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Content/Site.css" />


    <link href="https://netdna.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/js/Scripts/jquery.validate.min.js" type="text/javascript"></script>

</head>
<body>
    <style>
        a.logout {
            color: aliceblue;
        }
    </style>

    <nav class="navbar navbar-expand-lg navbar-light bg-dark">
        <div class="container">
            @Html.ActionLink("Tootles", "Index", "Home", new { area = "" }, new { @class = "navbar-brand text-light" })
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end ml-auto" id="navbarNavAltMarkup">
                <span class="float-right"> @Html.ActionLink("Home", "Index", "Home", null, new { @class = "logout" })</span>
            </div>>
        </div>
    </nav>
    <div class="container body-content">

        <div class="row content mt-5">

            <div class="col-sm-9 text-left mt-5 ">

                @RenderBody()
            </div>
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - E-Learning Platform</p>
        </footer>
    </div>
    <!--====== Javascripts & Jquery ======-->
    <script src="~/js/Scripts/jquery-3.2.1.min.js"></script>
    <script src="~/js/Scripts/bootstrap.min.js"></script>
    <script src="~/js/Scripts/mixitup.min.js"></script>
    <script src="~/js/Scripts/circle-progress.min.js"></script>
    <script src="~/js/Scripts/owl.carousel.min.js"></script>
    <script src="~/js/Scripts/main.js"></script>
    <script src='@Url.Content("~/js/Scripts/jquery-ui-1.12.1.min.js")' type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            $("[data-autocomplete-source]").each(function () {
                var target = $(this);
                target.autocomplete({ source: target.attr("data-autocomplete-source") });
            });
        });
    </script>

    <script type="text/javascript">
                            $(function () {
                                $('.btnD').click(function () {
                                    var id = $(this).data('assigned-id');
                                    var route = '@Url.Action("CourseDescription", "Home")?id=' + id;
                                    $('#partial').load(route);
                                });

                            });
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>

